<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clear"
        style="@style/KeyboardButton"
        android:text="AC"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete"
        style="@style/KeyboardButton"
        android:text="DE"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_clear"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_clear" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_7"
        style="@style/KeyboardButton"
        android:text="7"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_8"
        style="@style/KeyboardButton"
        android:text="8"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_7"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_9"
        style="@style/KeyboardButton"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_divider"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_7"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_divider"
        style="@style/KeyboardButton"
        android:text="รท"
        app:layout_constraintStart_toEndOf="@id/btn_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_7"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_4"
        style="@style/KeyboardButton"
        android:text="4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_5"
        style="@style/KeyboardButton"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_6"
        style="@style/KeyboardButton"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_multiple"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_multiple"
        style="@style/KeyboardButton"
        android:text="รท"
        app:layout_constraintStart_toEndOf="@id/btn_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_1"
        style="@style/KeyboardButton"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_2"
        style="@style/KeyboardButton"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_3"
        style="@style/KeyboardButton"
        android:text="3"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_minus"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_minus"
        style="@style/KeyboardButton"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_0"
        style="@style/KeyboardButton"
        android:text="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_equals"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_equals"
        style="@style/KeyboardButton"
        android:text="="
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_0"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_plus"
        style="@style/KeyboardButton"
        android:text="+"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_equals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_0"/>

</androidx.constraintlayout.widget.ConstraintLayout>